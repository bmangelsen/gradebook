<% if @parent.errors.any? %>
  <div class="alert alert-danger">
    <% @parent.errors.full_messages.each do |error| %>
      <p><%= error %>!</p>
    <% end %>
  </div>
<% end %>

<%= link_to "Back to Options", teacher_path(current_user.id) %>

<h4>Enter the info for your new parent!</h4>

<%= form_for @parent do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", maxlength: "30" %>

  <hr>

  <%= f.label :student_id %>
  <%= f.select :student_id, Student.all.map { |student|  [student.name, student.id] }, include_blank: true %>

  <hr>

  <%= f.submit class: 'btn btn-default btn-success' %>

<% end %>
