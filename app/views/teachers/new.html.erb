<% if @teacher.errors.any? %>
  <div class="alert alert-danger">
    <% @teacher.errors.full_messages.each do |error| %>
      <p><%= error %>!</p>
    <% end %>
  </div>
<% end %>

<%= link_to "Back to Options", teacher_path(current_user.id) %>

<h4>Enter the info for your new teacher!</h4>

<%= form_for @teacher do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", maxlength: "30" %>

  <hr>

  <%= f.submit class: 'btn btn-default btn-success' %>

<% end %>
