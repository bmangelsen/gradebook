<%= link_to "Back to Options", current_user %>

<h4>Here are all the grades:</h4>

<% if total_pages > current_page %>
  <%= link_to "Next Page", grades_path(page: current_page + 1) %>
<% end %>
<% 5.times do |i| %>
  <%= link_to current_page + i, grades_path(page: current_page + i) %>
<% end %>
<% if current_page > 0  %>
  <%= link_to "Prev Page", grades_path(page: current_page - 1)%>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>
        Assignment Name
      </th>
      <th>
        Date
      </th>
      <th>
        Grade
      </th>
      <th>
        Student
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
    <tr>
      <td>
        <%= grade.assignment_name %>
      </td>
      <td>
        <%= grade.date %>
      </td>
      <td>
        <%= grade.grade %>
      </td>
      <td>
        <%= Student.find_by(id: grade.student_id).name %>
      </td>
      <td>
        <%= link_to "Edit Grade", edit_grade_path(grade.id), class: 'btn btn-default btn-success btn-xs' %>
      </td>
      <td>
        <%= link_to "Delete Grade", grade_path(grade.id), method: :delete, class: 'btn btn-default btn-danger btn-xs' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
