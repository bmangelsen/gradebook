<% if @grade.errors.any? %>
  <div class="alert alert-danger">
    <% @grade.errors.full_messages.each do |error| %>
      <p><%= error %>!</p>
    <% end %>
  </div>
<% end %>

<%= link_to "Back to Options", teacher_path(current_user.id) %>

<h4>Edit the info for this grade!</h4>

<%= form_for @grade do |f| %>

  <%= f.label :assignment_name %>
  <%= f.text_field :assignment_name, class: "form-control", maxlength: "30" %>

  <%= f.label :date %>
  <%= f.date_field :date, class: "form-control" %>

  <%= f.label :grade %>
  <%= f.text_field :grade, class: "form-control" %>

  <hr>

  <%= f.label :student_id %>
  <%= f.select :student_id, Student.all.map { |student|  [student.name, student.id] }, include_blank: true %>

  <hr>

  <%= f.submit class: 'btn btn-default btn-success' %>

<% end %>
